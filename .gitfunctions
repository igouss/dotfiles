#!/bin/bash

function gitExecute {
    select REMOTEREPO in `git remote`; do echo $opt; break; done
    select BRANCH in `git branch | cut -c3- | paste -s -`; do break; done
    `eval ${1}`
    unset COMMAND REMOTEREPO BRANCH
}

function pull {
    gitExecute 'echo git pull -v --stat --rebase ${REMOTEREPO} ${BRANCH}'
}

function push {
    gitExecute 'echo git push -v ${REMOTEREPO} ${BRANCH}'
}

function delrem {
    gitExecute 'echo git push ${REMOTEREPO} :heads/${BRANCH}'
}

function delloc {
    select BRANCH in `git branch | cut -c3- | paste -s -`; do break; done
    git branch -D ${BRANCH}
    unset BRANCH
}

